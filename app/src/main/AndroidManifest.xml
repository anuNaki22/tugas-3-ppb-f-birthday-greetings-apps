<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BirthdayGreetingsApps"
        tools:targetApi="31">

        <!-- Definisi MainActivity dengan android:exported="true" -->
        <activity
            android:name="com.example.birthdaygreetingsapps.MainActivity"
            android:exported="true">
            <!-- Intent filter untuk menjadikan MainActivity sebagai pintu masuk aplikasi -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!-- Anda bisa menambahkan aktivitas lain di sini -->

    </application>
</manifest>
